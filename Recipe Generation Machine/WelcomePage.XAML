<Page x:Class="Recipe_Generation_Machine.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Recipe_Generation_Machine"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WelcomePage">

    <Grid>
        <Button x:Name="findRecipe" Content="Find Recipe" HorizontalAlignment="Center" Margin="0,80,0,0" VerticalAlignment="Center" Width="260" RenderTransformOrigin="-2.12,1.55" Height="40"/>
        <Button x:Name="addRecipe" Content="Add New Recipe" HorizontalAlignment="Center" Margin="0,200,0,0" VerticalAlignment="Center" Width="260" RenderTransformOrigin="-2.12,1.55" Height="40"/>
        <TextBlock x:Name="welcome" HorizontalAlignment="Center" Margin="0,0,0,150" TextWrapping="Wrap" Text="Welcome to the Recipe Saving Engine" VerticalAlignment="Center" FontSize="36"/>
    </Grid>
</Page>
